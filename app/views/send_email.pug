doctype html
head
    meta(charset='UTF-8')
    title Send email page
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
.container
    h1 Message
    form#document-form
        .form-group
            label(for='to') To:
            input#to.form-control(type='email' required='' value=email)
        .form-group
            label(for='subject') Subject:
            input#subject.form-control(type='text' required='')
        .form-group
            label(for='text') Text:
            input#text.form-control(type='text' required='')
        button.btn.btn-primary(type='submit') Send
        a.btn.btn-primary(href='/') Go Back
script(src='/views/send_script.js')